@model EditUserViewModel
@{
    Layout = "_AdminLayout";
}

<form asp-action="EditUser" asp-controller="Users" method="post">
    <div class="text-center">
        <div class="btn-group mb-2" role="group" aria-label="Actions">
            <button type="submit" class="btn btn-outline-success">Save</button>
            <a asp-action="Authors" class="btn btn-outline-danger">Cancel</a>
        </div>
    </div>

    <div class="user-edit-container">
        <div class="input-group mb-1">
            <div class="input-group-prepend">
                <span class="input-group-text d-inline-block">Username</span>
            </div>
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
        </div>
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <span class="input-group-text">Bio</span>
            </div>
            @Html.TextAreaFor(x => x.Bio, new { @class = "form-control" })
        </div>
    </div>
</form>

